@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách người dùng
}
<div class="row">
    <div class="col-lg-12">
        <!-- Begin Page Content -->
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
            </div>

            <button type="button" class="btn btn-warning"><a href="/Admin/User/Create"> Thêm người dùng</a></button>
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Index", "User", FormMethod.Get))
                    {
                        <div class="row">

                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" />

                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                            </div>

                        </div>
                    }
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Tài khoản</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Trạng thái tài khoản</th>
                                <th>#</th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Username</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    @* Sử dụng toán tử ba ngôi ép kiểu với trạng thái set trong db là null *@
                                <td>@((bool)@item.Status? "Hoạt Động": "Bị Khóa")</td>
                                    <td id="row_@item.ID">
                                        <a href="/Admin/User/Edit/@item.ID">Sửa</a>||
                                        <a href="/Admin/User/Delete/@item.ID">Xóa</a>
                                        @*@Ajax.ActionLink("Xóa","Delete", new AjaxOptions
                                            {
                                                Confirm = "Bạn có muốn xóa user này không?",
                                                OnComplete = "$('#row'"+item.ID +"').remove()",
                                                HttpMethod = "Delete"

                                            })*@
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>



        <!-- /.container-fluid -->
    </div>
</div>